<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".android.activityLifecycle.MainActivity">

    <TextView
        android:id="@+id/textId"
        style="@style/TextStyle.Medium"
        android:layout_marginBottom="@dimen/_10dp"
        android:hint="Show text value"
        app:layout_constraintBottom_toTopOf="@id/etView"
        app:layout_constraintEnd_toEndOf="@id/etView"
        app:layout_constraintStart_toStartOf="@id/etView" />

    <EditText
        android:id="@+id/etView"
        style="@style/EditTextStyle.Medium"
        android:hint="@string/enter_text"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnShow"
        style="@style/ButtonStyle"
        android:text="Show Data"
        app:layout_constraintEnd_toEndOf="@id/etView"
        app:layout_constraintStart_toStartOf="@id/etView"
        app:layout_constraintTop_toBottomOf="@id/etView" />
    <Button
        android:id="@+id/btnNext"
        style="@style/ButtonStyle.Medium"
        android:layout_width="0dp"
        android:background="@color/purple_500"
        android:text="@string/go_next"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
         />

</androidx.constraintlayout.widget.ConstraintLayout>