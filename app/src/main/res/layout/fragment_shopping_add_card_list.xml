<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/white"
    tools:context=".android.viewModelWithFragment.ShoppingAddCardListFragment">

    <!-- TODO: Update blank fragment layout -->
   <TextView
       android:id="@+id/tvTotalAmountLabel"
       style="@style/TextStyle.Large.Bold"
       android:text="@string/total_amount"
       app:layout_constraintTop_toTopOf="parent"
       app:layout_constraintStart_toStartOf="parent"
       />
    <TextView
        android:id="@+id/tvTotalAmount"
        style="@style/TextStyle.Large.Bold"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/tvTotalAmountLabel"
        app:layout_constraintStart_toEndOf="@id/tvTotalAmountLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvTotalAmountLabel"
        />

    <TextView
        android:id="@+id/tvTotalItemLabel"
        style="@style/TextStyle.Large.Bold"
        android:text="@string/total_item"
        app:layout_constraintStart_toStartOf="@id/tvTotalAmountLabel"
        app:layout_constraintTop_toBottomOf="@id/tvTotalAmountLabel"
        />

    <TextView
        android:id="@+id/tvTotalCount"
        style="@style/TextStyle.Large.Bold"
        android:layout_width="0dp"
        app:layout_constraintTop_toTopOf="@id/tvTotalItemLabel"
        app:layout_constraintStart_toEndOf="@id/tvTotalItemLabel"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintBottom_toBottomOf="@id/tvTotalItemLabel"
        />
   <include
       layout="@layout/fragment_shopping_list"
       android:layout_width="0dp"
       android:layout_height="0dp"
       android:layout_marginTop="10dp"
       app:layout_constraintTop_toBottomOf="@id/tvTotalItemLabel"
       app:layout_constraintStart_toStartOf="parent"
       app:layout_constraintEnd_toEndOf="parent"
       app:layout_constraintBottom_toBottomOf="parent"

       />

</androidx.constraintlayout.widget.ConstraintLayout>